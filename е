from turtle import *

# Настройка экрана
screen = Screen()
screen.title("Задача с черепахой")
screen.bgcolor("white")

# Создание черепахи
shape("turtle")
color("blue")
speed(1)  # Установите скорость черепахи (1 - медленно, 10 - быстро)

# Функция для рисования квадрата
def draw_square(size):
    for _ in range(4):
        forward(size)
        right(90)

# Функция для рисования круга
def draw_circle(radius):
    circle(radius)

# Функция для рисования линии к заданной точке
def draw_line_to_point(x, y):
    penup()           # Поднимаем перо, чтобы не рисовать линию
    goto(x, y)       # Перемещаем черепаху к заданной точке
    pendown()         # Опускаем перо, чтобы начать рисовать
    forward(50)      # Рисуем линию длиной 50 единиц

# Основная программа
if __name__ == "__main__":
    draw_square(100)  # Рисуем квадрат со стороной 100
    draw_circle(50)   # Рисуем круг с радиусом 50
    draw_line_to_point(200, 200)  # Рисуем линию к точке (200, 200)

    # Завершение работы по клику
    screen.exitonclick()
