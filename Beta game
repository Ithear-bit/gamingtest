#include <codecvt>
#include <iostream>
#include <locale>
#include <cstdlib>
#include <ctime>
#include <limits>
#define Red "\033[0;31m"
#define Green "\033[0;32m"
#define white "\033[0;37m"
using namespace std;
float EZE(float& balanc) {
    float poter, prixod;
    short int start, end, cube, cube1, cube2, x;
    prixod = 0.f;
    poter = 0.f;
    int seed = time(NULL);
    srand(seed);
    start = 1;
    end = 6;
    x = rand() % (end - start + 1) + start;
    cube = rand() % (end - start + 1) + start;
    cube1 = rand() % (end - start + 1) + start;
    cube2 = rand() % (end - start + 1) + start;
    cout << x << endl;
    while (true) {
        if (cin.fail())
        {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << Red << "Error: An invalid value has been entered. Please enter the number.";
            cout << white << "." << endl;
            cout << x << endl;
            continue;
        }
        break;
    }
    cout << "the first cube: " << cube << " The second cube: " << cube1 << " The third cube: " << cube2 << endl;
    if (x == cube or x == cube2 or x == cube1) {
        cout << Green << "luck is on your side today." << white << endl;
        prixod = balanc + 100;
        cout << Green << "You've won:100" << white << endl;
        balanc = prixod;
        cout << "your current balance: " << balanc << endl;
    }
    else {
        poter = balanc - 30;
        cout << Red << "You lost: 30 coins" << white << endl;
        balanc = poter;
        cout << "your current balance: " << balanc << endl;
    }
    return balanc;
}
float HARD(float& balanc)
{
    float poter, prixod;
    short int start, end, cube, cube1, cube2, x;
    prixod = 0.f;
    poter = 0.f;
    int seed = time(NULL);
    srand(seed);
    start = 1;
    end = 6;
    x = rand() % (end - start + 1) + start;
    cube = rand() % (end - start + 1) + start;
    cube1 = rand() % (end - start + 1) + start;
    cube2 = rand() % (end - start + 1) + start;
    cout << x << endl;
    while (true) {
        if (cin.fail())
        {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << Red << "Error: An invalid value has been entered. Please enter the number.";
            cout << white << "." << endl;
            cout << x << endl;
            continue;
        }
        break;
    }
    cout << Green << "luck is on your side today." << white << endl;
    if (x == cube and x == cube1 or x == cube2 and x == cube1 or x == cube2 and x == cube1) {
        cout << "the first cube: " << cube << " The second cube: " << cube1 << " The third cube: " << cube2 << endl;
        prixod = balanc + 1000;
        cout << Green << "You've won:1000" << white << endl;
        balanc = prixod;
        cout << "your current balance: " << balanc << endl;
    }
    else {
        poter = balanc - 300;
        cout << Red << "You lost: 300 coins" << white << endl;
        balanc = poter;
        cout << "your current balance: " << balanc << endl;
    }
    return balanc;
}
int main() {
    float balanc = 0.1;
    cout << "Keep your balance: ";
    cin >> balanc;
    while (balanc > 0) {
        cout << "1 - easy" << endl;
        cout << "2 - hard drive" << endl;
        int uroven;
        cin >> uroven;
        while (cin.fail()) {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << Red << "Error: An invalid value has been entered. Please enter the number" << endl;
            cout << white << "." << endl;
            cin >> uroven;
        }
        if (uroven == 1) {
            cout << "easy" << endl;
            EZE(balanc);
        }
        else if (uroven == 2) {
            cout << "hard drive" << endl;
            HARD(balanc);
        }
        else {
            cout << "There is no such level of difficulty, please keep the numbers that are indicated." << endl;
        }
    }
    return 0;
}
